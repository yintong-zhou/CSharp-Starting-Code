<Window x:Class="LoopThroughXmlDocument.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoopThroughXmlDocument"
        mc:Ignorable="d"
        Title="LoopThroughXmlDocument" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="textBoxResults" HorizontalAlignment="Left" Height="299" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="404"/>
        <Button x:Name="buttonLoop" Content="Loop" HorizontalAlignment="Left" VerticalAlignment="Top" Width="88" Margin="419,10,0,0" Click="buttonLoop_Click"/>
        <Button x:Name="buttonCreateNode" Content="Create" HorizontalAlignment="Left" Margin="419,35,0,0" VerticalAlignment="Top" Width="88" Click="buttonCreateNode_Click"/>
        <Button x:Name="buttonDeleteNode" Content="Delete" HorizontalAlignment="Left" Margin="419,60,0,0" VerticalAlignment="Top" Width="88" Click="buttonDeleteNode_Click"/>
        <Button x:Name="buttonXMLtoJSON" Content="XML to JSON" HorizontalAlignment="Left" Margin="419,85,0,0" VerticalAlignment="Top" Width="88" Click="buttonXMLtoJSON_Click"/>

    </Grid>
</Window>
